<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to (image_tag("https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png")), flats_path, class: "navbar-brand" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>



  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

    <form action="/">
      <input type="text" id="search-bar" name="query" placeholder="Search...">
      <input type="submit" class="btn btn-primary-info ml-2">
    </form>

      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Host", admin_dashboard_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Dashboard",dashboard_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Home",flats_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Messages",conversations_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <span id="user">Hello - <%= current_user.first_name %></span>
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag 'logo.png', class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Friends", find_friends_path, class: "dropdown-item" %>
            <%= link_to "List Your Flat",new_flat_path, class: "dropdown-item" %>
            <%= link_to "Profile", edit_user_registration_path, class: "dropdown-item"%>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

