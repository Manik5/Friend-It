

<div class="container">
  <div class="row">
    <div class="col-md-7">
      <% friends.each do |user| %>
        <div class="row friend-card-wrapper">
          <div class="col-md-4 friend-card-left">
            <h3><%= user.first_name %> <%= user.last_name %></h3>
            <% if user.photo.attached? %>
              <%= cl_image_tag user.photo.key %>
            <% else %>
              <%= image_tag "https://source.unsplash.com/#{rand(1200..1400)}x#{rand(900..1000)}/?face,men,woman", class: "friend-image" %>
            <% end %>
          </div>
          <div class="col-md-4 friend-card-center">
            <h3>Mutual friends</h3>
            <div class="common-friends-box">
              <% current_user.common_friends(user).each do |common_friend| %>
                <% if common_friend.photo.attached? %>
                  <%= cl_image_tag common_friend.photo.key %>
                <% else %>
                  <%= image_tag "https://source.unsplash.com/#{rand(1200..1400)}x#{rand(900..1000)}/?face,men,woman", class: "friend-image-small" %>
                  <!-- <i class="fas fa-user-circle" style="color: gray"></i> -->
                <% end %>
              <% end %>
            </div>
            <div>
              <% if current_user.pending_friends.include?(user) %>
                <p style="opacity: 0.6">Friendship requested</p>
              <% elsif current_user.friends.include?(user) %>
                <p style="opacity: 0.6">Accepted</p>
                <% else %>
                <div class="button-wrapper">
                  <%= link_to "FriendIt", add_friends_path(user), method: :post, class: "btn btn-primary", style:"font-size: 12px; margin-top: 10px;" %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-md-4 friend-card-right">
            <h3>Available flats</h3>
            <% if user.flats.empty? %>
              <p>This user has made no flat available</p>
            <% else %>
              <% user.flats.each do |flat| %>
                <%= link_to flat.title, flat_path(flat), class: "btn btn-ghost", style: "text-transform: capitalize; font-size: 10px; margin: 3px;" %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

<!--     , style:"font-size: 12px; text-transform: capitalize;"
 -->

    <div class="col-md-5">
      <div id="map"
        style="width: 300%;
        height: 100vh;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>

    </div>
  </div>
</div>

