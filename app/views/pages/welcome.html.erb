          <h1><strong>Friend It</strong></h1>
          <h2>Your Community First Rental Solutions</h2>
          <h5 class="light grey-text text-lighten-3 hide-on-small-only"></h5>
        </div>
      </li>
      <li>
        <img src="https://images.unsplash.com/photo-1529408686214-b48b8532f72c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80", style="opacity:0.4;filter:alpha(opacity=40)", alt="">
        <!-- random image -->
        <div class="caption right-align">
          <h2>Ready?</h2>
          <h5 class="light grey-text text-lighten-3 hide-on-small-only"></h5>
        </div>
      </li>
      <li>
        <img src="https://images.unsplash.com/photo-1501876725168-00c445821c9e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80" style="opacity:0.4;filter:alpha(opacity=40)", alt="">
        <!-- random image -->
        <div class="caption left-align">
          <h2><strong>Friend It</strong></h2>
          <h2>Your Community First Rental Solutions</h2>
          <h5 class="light grey-text text-lighten-3 hide-on-small-only"></h5>
        </div>
      </li>
    </ul>
  </section>

  <!--Section: Search-->
  <section id="search" class="section section-search white darken-1 coolyellow-text center scrollspy">
    <div class="container">
      <div class="row">
        <div class="col s12">
          <h3>How Does It Work?</h3>
        </div>
      </div>
    </div>


  <!--Section: Icon Boxes-->
  <section class="section coolyellow section-icons lighten-4 center">
    <div class="container">
      <div class="row">
        <div class="col s12 m4">
          <!--entire screen when on mobile, but 4 columns on medium size and above-->
          <div class="card-panel">
            <i class="material-icons large coolyellow">account_circle</i>
            <h4>Sign Up</h4>
            <p>Be part of Friend It Community! Trust us, we'll make things easier</p>
          </div>
        </div>
        <div class="col s12 m4">
          <div class="card-panel">
            <i class="material-icons large coolyellow">group_add</i>
            <h4>Add Your Friends</h4>
            <p>Time to add some of you best buddies</p>
          </div>
        </div>
        <div class="col s12 m4">
          <div class="card-panel">
            <i class="material-icons large coolyellow">home</i>
            <h4>Upload Your Flat</h4>
            <p>Have a flat? Share it with your friends</p>
          </div>
        </div>
        <div class="col s12 m4">
          <div class="card-panel">
            <i class="material-icons large coolyellow">verified_user</i>
            <h4>Done!</h4>
            <p>You can share properties with your friends!</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</section>


  <!--Section: Contact-->
  <section id="contact" class="section coolyellow section-contact scrollspy">
    <div class="container">
      <div class="row">
        <div class="col s12 m6">
          <div class="card-panel coolyellow white-text center">
            <i class="material-icons">thumb_up</i>
            <h5>Ready to Go?</h5>
            <br>
            <p><%=link_to "sign up", new_user_registration_path, class:"btn btn-ghost" %></p>
          </div>

        </div>

    </div>
  </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>
  <script type="text/javascript" src="script.js"></script>
</body>

























