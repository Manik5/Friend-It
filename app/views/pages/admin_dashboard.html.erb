
<p>Admin Dashboard</p>

<ul id="myTab2" role="tablist" class="nav nav-tabs nav-pills with-arrow lined flex-column flex-sm-row text-center">

  <li class="nav-item flex-sm-fill"><i class="fas fa-user-friends"></i>
    <a id="home2-tab" data-toggle="tab" href="#home2" role="tab" aria-controls="home2" aria-selected="true"
      class="nav-link text-uppercase font-weight-bold mr-sm-3 rounded-0 active">Upcoming Friends</a>
  </li>

  <li class="nav-item flex-sm-fill"><i class="fas fa-user-check"></i>
    <a id="contact2-tab" data-toggle="tab" href="#contact2" role="tab" aria-controls="contact2"
      aria-selected="false" class="nav-link text-uppercase font-weight-bold rounded-0">Past Host</a>
  </li>

   <li class="nav-item flex-sm-fill"><i class="fas fa-exchange-alt"></i>
    <a id="contact3-tab" data-toggle="tab" href="#contact3" role="tab" aria-controls="contact3"
      aria-selected="false" class="nav-link text-uppercase font-weight-bold rounded-0">Swap Request</a>
  </li>


</ul>
    <div id="myTab2Content" class="tab-content">
      <div id="home2" role="tabpanel" aria-labelledby="home-tab" class="tab-pane fade px-4 py-5 show active">

      <div class="container-fluid ">
          <div class="row">
        <% @received_bookings.each do |booking|  %>

        <div class="col-4">
          <div class="card hoverable">
           <div class="card-image waves-effect waves-block waves-light">
            <% if booking.flat.photos.first %>
             <%= cl_image_tag booking.flat.photos.first.key,  height: 300, width: 300, crop: :fill, class: "card-img-top hoverable" %>
            <% end %>
            </div>
              <div class="card-content">
                <span class="card-title activator"><%= booking.flat.title %><i class="material-icons right">add</i></span>
                <% if booking.flat.user.photo.attached? %>
                <%= cl_image_tag booking.flat.user.photo.key, class: "card-trip-user avatar-bordered" %>
                <% else %>
                  <img src="https://www.agriuniverse.co.zw/media/com_easysocial/photos/232/582/man-avatar-icon-flat-vector-19152370_large.jpg" class="card-trip-user avatar-bordered" />
                <% end %>
              </div>
              <div class="card-reveal">
                <p><%booking.status%></p>
                <p> <%= booking.start_date %> </p>
                <p> <%= booking.end_date %> </p>
                <p>$<%= booking.flat.price %> </p>
                <span class="card-title grey-text text-darken-4"><i class="material-icons">expand_less</i></span>
              </div>
          </div>


              <% unless booking.status == "accepted" || booking.status == "rejected" %>
                <%= link_to 'accept', booking_accept_path(booking), class: "btn btn-primary", method: :put %>
                <%= link_to 'reject', booking_reject_path(booking), class: "btn btn-primary", method: :put %>
                <% else %>
  
              <% end %>

              <% booking.flat.recommendations.each do |recommendation| %>
                <%= link_to "Edit Recommendation", edit_recommendation_path(recommendation) %>
                <% end %>
                <% booking.flat.contacts.each do |contact| %>
                <%= link_to "Edit Contact", edit_contact_path(contact), class: "btn btn-primary" %>
                <% end %>
            <% end %>
          </div>
      </div>
    </div>
  </div>

      <div id="contact3" role="tabpanel" aria-labelledby="contact3-tab" class="tab-pane fade px-4 py-5">

       <div class="container-fluid ">
          <div class="row">
            <% @received_requests.each do |request| %>
            <div class="col-4">
              <div class="card">
                <div class="card-image waves-effect waves-block waves-light">
                <% if request.flat.photos.first %>
                  <%= cl_image_tag request.flat.photos.first.key, class: "card-img-top hoverable" %>
                <% end %>
                </div>
                  <div class="card-content">
                    <h2><%= request.requester_flat.user.first_name  %> wants to trade <%= link_to request.requester_flat.title, flat_path(request.requester_flat) %></h2>
                    <% unless request.status == "accepted" || request.status == "rejected" %>
                     <% if request.flat.user.photo.attached? %>
                      <%= cl_image_tag request.flat.user.photo.key, class: "card-trip-user avatar-bordered" %>
                      <% else %>
                        <img src="https://www.agriuniverse.co.zw/media/com_easysocial/photos/232/582/man-avatar-icon-flat-vector-19152370_large.jpg" class="card-trip-user avatar-bordered" />
                    <% end %>
                      <p><%= link_to 'Accept', swap_request_accept_path(request), class: "btn btn-primary", method: :put %></p>
                      <p><%= link_to 'Reject', swap_request_reject_path(request), class: "btn btn-primary", method: :put %></p>
                  <% end %>
                  </div>
                </div>
              </div>
            <% end %>
        </div>
            </div>
          </div>
    </div>
  </div>


 