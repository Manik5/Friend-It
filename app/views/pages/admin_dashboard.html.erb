    <div id="myTab2Content" class="tab-content">
      <div id="home2" role="tabpanel" aria-labelledby="home-tab" class="tab-pane fade px-4 py-5 show active">


      </div>
    <div id="profile2" role="tabpanel" aria-labelledby="profile-tab" class="tab-pane fade px-4 py-5">
      <% @received_bookings.each do |booking|  %>

          <p><%booking.status%></p>

            <p> <%= booking.flat.title %> </p>
            <p> <%= booking.start_date %> </p>
            <p> <%= booking.end_date %> </p>
            <p>$<%= booking.flat.price %> </p>

          <% unless booking.status == "accepted" || booking.status == "rejected" %>
            <%= link_to 'accept', booking_accept_path(booking), method: :put %>
            <%= link_to 'reject', booking_reject_path(booking), method: :put %>
          <% end %>

            <% booking.flat.recommendations.each do |recommendation| %>
              <%= link_to "Edit Recommendation", edit_recommendation_path(recommendation) %>
              <% end %>
              <% booking.flat.contacts.each do |contact| %>
              <%= link_to "Edit Contact", edit_contact_path(contact) %>

              <% end %>
          <% end %>
    
      </div>
        <div id="contact2" role="tabpanel" aria-labelledby="contact-tab" class="tab-pane fade px-4 py-5">
       

      </div>
        <div id="contact2" role="tabpanel" aria-labelledby="contact-tab" class="tab-pane fade px-4 py-5">
      <% @received_requests.each do |request| %>
          <%= request.requester_flat.user.email  %> wants to trade <%= link_to request.requester_flat.title, flat_path(request.requester_flat) %>
          <%= link_to "Accept it!", accept_swap_request_path(request), method: :post %>
        <% end %>
         
      </div>
    </div>
