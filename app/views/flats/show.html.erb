
<div class="container">
  <div class="row">
     <div class="col-8">
    
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="..." alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="..." alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="..." alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
    

        <h3><%= @flat.title %></h3>
        <p><%= @flat.description %></p>
        <p><i class="fas fa-dollar-sign"></i><%= @flat.price %></p>

        <span><i class="fas fa-exchange-alt"></i><%= @flat.swappable ? "This flat is swappable" : "This flat is not swappable" %>: </span><%= link_to "Swap", new_flat_swap_request_path(@flat), class: "btn btn-primary"%>

        <br>

        <span>Owner:<%= @flat.user.first_name %></span> <img src="https://www.agriuniverse.co.zw/media/com_easysocial/photos/232/582/man-avatar-icon-flat-vector-19152370_large.jpg" class="card-trip-user avatar-bordered" />

        <br>
        <br>

      <ul class="list-group list-group-horizontal">

        <li class="list-group-item"><i class="fas fa-bed"></i>Number of bedrooms: <%= @flat.number_of_bedrooms %></li>
        <li class="list-group-item"><i class="fas fa-restroom"></i>Number of bathrooms: <%= @flat.number_of_bathrooms %></li>
        <li class="list-group-item"><i class="fas fa-person-booth"></i>Number of beds: <%= @flat.number_of_beds %></li>

      </ul>
   

      <br>
      <br>

      </div>




    <div class="col-4">
      <div id='flat-booking-dates' data-unavailable="<%= @flat.unavailable_dates.to_json %>">
          <% if current_user.id != @flat.user_id  %>
            <%= simple_form_for([@flat, @booking]) do |f| %>
                <%= f.input :start_date, as: :string, type: :text %>
                <%= f.input :end_date, as: :string, type: :text %>
                <%= f.input :number_of_guests %>
                <%= f.submit "Book", class: "btn btn-primary" %>
              <% end %>
            <% end %>
        </div>
      </div>
    </div>


        <%= link_to "Back", flats_path, class: "btn btn-primary" %></p>

        <% if @flat.user == current_user %>
          <%= link_to "Edit this flat", edit_flat_path(@flat), class: "btn btn-primary" %>
        <% end %>

        <% if @flat.user == current_user %>
          <%= link_to "Add a Recommendation", new_flat_recommendation_path(@flat), class: "btn btn-primary" %>
        <% end %>

        <% if @flat.user == current_user %>
          <%= link_to "Add a Contact", new_flat_contact_path(@flat) , class: "btn btn-primary"%>
        <% end %>


    <div class="col-md-8">
        <div id="map"
        style="width: 100%; height: 100vh"        
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>

    </div>
  </div>
</div>

