
<div class="container">
  <div class="row">
     <div class="col-8">
      <% if @flat.photos.first %>
          <%= cl_image_tag @flat.photos.first.key,  height: 300, width: 400, crop: :fill, class: "card-img-top hoverable" %>
        <% end %>
        <h3><%= @flat.title %></h3>
        <p><%= @flat.description %></p>
        <p><i class="fas fa-dollar-sign"></i><%= @flat.price %></p>

        <i class="fas fa-exchange-alt"></i>
        <span>
        <% if @flat.swappable %>
          This flat is swappable
        </span>
        <%= link_to "Swap", new_flat_swap_request_path(@flat), class: "btn btn-primary"%>
        <% else %>
          This flat is not swappable
          </span>
        <% end %>

        <br>

        <span>Owner:<%= @flat.user.first_name %></span> 
        <% if @flat.user.photo.attached? %>
          <%= cl_image_tag @flat.user.photo.key, class: "card-trip-user avatar-bordered" %>
        <% else %>
        <img src="https://www.agriuniverse.co.zw/media/com_easysocial/photos/232/582/man-avatar-icon-flat-vector-19152370_large.jpg" class="card-trip-user avatar-bordered" />
        <% end %>
        <br>
        <br>

      <ul class="list-group list-group-horizontal">

        <li class="list-group-item"><i class="fas fa-bed"></i>Number of bedrooms: <%= @flat.number_of_bedrooms %></li>
        <li class="list-group-item"><i class="fas fa-restroom"></i>Number of bathrooms: <%= @flat.number_of_bathrooms %></li>
        <li class="list-group-item"><i class="fas fa-person-booth"></i>Number of beds: <%= @flat.number_of_beds %></li>

      </ul>
   
  <div class="container">
    <div class="row">
      <div class="col-6">
        <div class="card-panel">
      <% @flat.perks.each do |perk| %>
      <span><i class="fas fa-check"></i><%= perk.name %></span>
      <% end %>
      </div>
    </div>
  </div>
</div>

      <br>
      <br>

      </div>




    <div class="col-4">
      <div id='flat-booking-dates' data-unavailable="<%= @flat.unavailable_dates.to_json %>">
          <% if current_user.id != @flat.user_id  %>
            <%= simple_form_for([@flat, @booking]) do |f| %>
                <%= f.input :start_date, as: :string, type: :text %>
                <%= f.input :end_date, as: :string, type: :text %>
                <%= f.input :number_of_guests %>
                <%= f.submit "Book", class: "btn btn-primary" %>
              <% end %>
            <% end %>
        </div>
      </div>
    </div>


        <%= link_to "Back", flats_path, class: "btn btn-primary" %></p>

        <% if @flat.user == current_user %>
          <%= link_to "Edit this flat", edit_flat_path(@flat), class: "btn btn-primary" %>
        <% end %>

        <% if @flat.user == current_user %>
          <%= link_to "Add a Recommendation", new_flat_recommendation_path(@flat), class: "btn btn-primary" %>
        <% end %>

        <% if @flat.user == current_user %>
          <%= link_to "Add a Contact", new_flat_contact_path(@flat) , class: "btn btn-primary"%>
        <% end %>

</div>

    <div class="col-md-12">
        <div id="map"
        style="width: 100%; height: 100vh"        
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>

    </div>
  </div>

<a class="top-link hide" href="" id="js-top">
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 12 6"><path d="M12 6H0l6-6z"/></svg>
  <span class="screen-reader-text">Back to top</span>
</a>

